<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/custom_dialog_size"
    android:layout_height="@dimen/custom_dialog_size"
    android:background="@drawable/background_custom_dialog"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ivLoading"
        android:layout_width="@dimen/custom_dialog_size"
        android:layout_height="@dimen/custom_dialog_height_small"
        android:paddingTop="@dimen/custom_dialog_padding_top"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:text="请稍候..."/>

</LinearLayout>